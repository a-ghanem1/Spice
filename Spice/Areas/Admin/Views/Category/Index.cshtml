@model IEnumerable<Category> 

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border background-white pt-4">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0) 
        { 
            <table class="table table-hover">
            <tr class="table-info">
                <th style="width: 10%">#</th>
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th></th>
                <th></th>
            </tr>
           @foreach (var category in Model)
           {
               <tr>
                   <td>
                       @Html.DisplayFor(m => category.Id)
                   </td>
                   <td>
                       @Html.DisplayFor(m => category.Name)
                   </td>
                   <td>
                       <partial name="_TableIconsPartial" model="category.Id" />
                   </td>
               </tr>
           }
        
            </table>
        }
        else
        {
            <p>No Catgeory exists...</p>
        }
    </div>
</div>