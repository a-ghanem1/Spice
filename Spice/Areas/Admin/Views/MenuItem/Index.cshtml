@model IEnumerable<MenuItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border background-white pt-4">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Menu Item List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-hover">
                <tr class="table-info">
                    <th style="width: 10%">#</th>
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.CategoryId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.SubCategoryId)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var menuItem in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => menuItem.Id)
                </td>
                <td>
                    @Html.DisplayFor(m => menuItem.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => menuItem.Price)
                </td>
                <td>
                    @Html.DisplayFor(m => menuItem.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => menuItem.SubCategoryId)
                </td>
                <td>
                    <partial name="_TableIconsPartial" model="menuItem.Id" />
                </td>
            </tr>
                }

            </table>
        }
        else
        {
            <p>No Items exists...</p>
        }
    </div>
</div>